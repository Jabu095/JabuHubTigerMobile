<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="390dp"
    android:orientation="vertical"
    android:padding="50dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Bicycle model"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Bicycle model"
        android:id="@+id/txtbikeC"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spnmodelsC"
        android:entries="@array/conditions"
        android:layout_height="wrap_content">

    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:text="save"
        android:id="@+id/btnSave"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="Close"
            android:id="@+id/btnClose"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>